generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  free_user
  premium_user
  plus_user
  admin_user
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  name       String
  password   String
  role       UserRole @default(free_user)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  Files      Files[]
}

model Files {
  id          Int      @id @default(autoincrement())
  name        String
  path        String
  user_id     Int
  user        User     @relation(fields: [user_id], references: [id])
  description String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}
